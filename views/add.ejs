<% include ./partials/header.ejs %>

<div class="px-10 py-5 text-white min-h-screen bg-zinc-800">
  <h1 class="text-xl">Create a new post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="w-1/3 px-3 py-2" type="file" name="postimage" />
    <input
      class="text-black block w-1/3 px-3 py-2 border-2 rounded-md"
      type="text"
      placeholder="Title"
      name="title"
    />
    <textarea
      class="text-black w-1/3 px-3 py-2 border-2 rounded-md my-2 h-60"
      type="text"
      placeholder="Description"
      name="description"
    ></textarea>
    <button class="block w-1/3 px-3 py-2 rounded-md bg-red-700" type="submit">
      Create a new post
    </button>
  </form>
</div>
