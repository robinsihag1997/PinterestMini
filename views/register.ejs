<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center"
>
  <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl mb-10 text-center font-semibold text-zinc-700 tracking-tight capitalize leading-none"
    >
      Create New account
    </h1>
    <form action="/register" method="post">
      <input
        class="block w-full px-3 py-2 mt-2 rounded-md border-2 border-zinc-100"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="block w-full px-3 py-2 mt-2 rounded-md border-2 border-zinc-100"
        type="email"
        name="email"
        placeholder="Email"
        required
      />
      <input
        class="block w-full px-3 py-2 mt-2 rounded-md border-2 border-zinc-100"
        type="text"
        name="number"
        placeholder="Number"
      />
      <input
        class="block w-full px-3 py-2 mt-2 rounded-md border-2 border-zinc-100"
        type="password"
        name="password"
        placeholder="Password"
        required
      />

      <button
        class="block w-full px-3 py-2 mt-5 bg-red-600 text-white rounded-full"
        type="submit"
      >
        Create a new account
      </button>
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service ; Opens a new
        tab and acknowledge you've read our Privacy Policy ; Opens a new tab .
        Notice at collection ; Opens a new tab .
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/"
      >Login Existing Account ?</a
    >
  </div>
</div>

<% include ./partials/footer.ejs %>
